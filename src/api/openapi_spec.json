{
  "openapi": "3.1.0",
  "info": {
    "title": "Wordle API",
    "description": "This is an API for Wordle",
    "version": "1.1.1"
  },
  "paths": {
    "/wordle": {
      "post": {
        "summary": "Solve Wordle",
        "operationId": "solve_wordle",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WordleSolveRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WordleSolveResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/ping": {
      "get": {
        "summary": "Ping",
        "operationId": "ping",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PingResponse"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health",
        "operationId": "health",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "HealthResponse": {
        "properties": {
          "status": {
            "type": "string",
            "title": "Status"
          },
          "response": {
            "type": "string",
            "title": "Response"
          }
        },
        "type": "object",
        "required": ["status", "response"],
        "title": "HealthResponse"
      },
      "PingResponse": {
        "properties": {
          "response": {
            "type": "string",
            "title": "Response"
          }
        },
        "type": "object",
        "required": ["response"],
        "title": "PingResponse"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": ["loc", "msg", "type"],
        "title": "ValidationError"
      },
      "WordleSolveRequest": {
        "properties": {
          "words": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Words"
          },
          "places": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Places"
          },
          "size": {
            "type": "integer",
            "title": "Size"
          }
        },
        "type": "object",
        "required": ["words", "places", "size"],
        "title": "WordleSolveRequest"
      },
      "WordleSolveResponse": {
        "properties": {
          "suggestions": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Suggestions"
          },
          "alternatives": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Alternatives"
          },
          "remaining": {
            "type": "integer",
            "title": "Remaining"
          },
          "used_letters": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Used Letters"
          }
        },
        "type": "object",
        "required": [
          "suggestions",
          "alternatives",
          "remaining",
          "used_letters"
        ],
        "title": "WordleSolveResponse"
      }
    }
  }
}
