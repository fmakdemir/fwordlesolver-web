{
  "name": "fwordlesolver-web",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "test": "echo no tests",
    "api:update": "curl https://games.codeuni.net/wordle-solver/api/openapi.json -s -o src/api/openapi.json && pnpm format && pnpm orval",
    "docker:build": "docker build . -t fmakdemir/fwordlesolver-web:latest",
    "docker:build:devo": "docker build . -t fmakdemir/fwordlesolver-web:devo",
    "docker:run": "docker run --rm -p 8000:80 --name web fmakdemir/fwordlesolver-web:latest",
    "docker:kill": "sudo kill $(docker inspect web | jq '.[].State.Pid')",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@primevue/themes": "^4.3.9",
    "pinia": "^2.3.1",
    "primevue": "^4.3.9",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.55.1",
    "@primevue/auto-import-resolver": "^4.3.9",
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/vue-query": "^5.90.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.18.6",
    "@typescript-eslint/utils": "^8.44.1",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/eslint-plugin": "1.1.25",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "axios": "^1.12.2",
    "eslint": "^9.36.0",
    "eslint-plugin-oxlint": "^0.15.15",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-vue": "^9.33.0",
    "jiti": "^2.6.0",
    "jsdom": "^26.1.0",
    "lodash": "^4.17.21",
    "msw": "^2.11.3",
    "npm-run-all2": "^7.0.2",
    "orval": "^7.12.2",
    "oxlint": "^0.15.15",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "primeicons": "^7.0.0",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.7.3",
    "unplugin-vue-components": "^28.8.0",
    "vite": "^6.3.6",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.12"
  },
  "msw": {
    "workerDirectory": [
      "src/api/msw",
      "public"
    ]
  }
}
